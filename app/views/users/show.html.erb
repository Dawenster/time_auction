<%= cl_image_tag @user.photo.url if @user.photo %>
<h1>Profile for <%= @user.name %></h1>

<% if current_user = @user %>
   <%= form_tag [@user, Photo.new], :method => 'post', :multipart => true do %>
    <label for="file"><h3>Upload an Avatar</h3></label>
    <%= file_field_tag "file" %>
    <%= hidden_field_tag :user_id, @user.id %>
    <%= submit_tag "Upload", :class => "btn btn-success" %>
  <% end %>
<% end %>
