<div id="user-profile-name">
  <h1>Profile for <%= @user.name %></h1>
  <% if current_user == @user && !@user.identities.any? %>
    <div id="fbconnect">
      <%= link_to "", fb_login_path %>
    </div>
  <% end %>
  <% if @user.identities.any? %>
    <%= link_to image_tag('/assets/facebook-icon.png'), "http://www.facebook.com/#{@user.fb_identity.username}" %>
  <% end %>
</div>
<div class="row">      
  <div class="span2">
    <div class="photo-upload">
      
      <%= profile_pic(@user, 200, 200) %>

      <% if current_user == @user %>
      <div class="upload">
        <%= form_tag [@user, Photo.new], :method => 'post', :multipart => true do %>
          <label for="file">Change Photo</label>
          <%= hidden_field_tag :user_id, @user.id %>
          <%= file_field_tag "file" %>
        </div>
          <%= submit_tag "Upload", :class => "btn btn-success" %>

        <% end %>
      <% end %>
    </div>
  
    <div class="userStatisticsBox">
      <div id="hoursCount">
        <%= number_with_delimiter(@user.time_donated) %>
        <div id="hours">Hours</div>
        <div id="hours">Logged</div>
      </div>
    </div>

  </div>
  <div class="span10">
    <div class="profile-container">
      
      <div class="profileBox">
        <div class="recentBids">
          <h2>Recent Bids</h2>
          <% if @entered_auctions.any? %>
            <ul>
              <% @bids.each do |bid| %>
                <li><%= bid.description %> on <%= link_to bid.auction.title, auction_path(bid.auction) %></li>
              <% end %>
            </ul>
          </div>

          <div class="recentBidPhoto">
            <% @entered_auctions.each do |auction| %>
              <%= link_to (cl_image_tag auction.photos.first.url, width: 150, height: 150, :class => "browse-photo", :crop => :fill), auction %>
            <% end %>
          </div>

          <% else %>
            <%= @user.name %> hasn't participated in any auctions yet!
          <% end %>
      </div>
        
      <div class="profileBox">
        <div class="auctionsWon">
          <h2>Auctions Won</h2>
          <% if @winning_auctions.any? %>
            <% @winning_auctions.each do |auction| %>
              <%= link_to auction.title, auction %>
            <% end %>
          <% else %>
            <%= @user.name %> hasn't won any auctions yet!
          <% end %>
        </div>
      </div>
      
      <% if current_user == @user %>
        <div class="profileBox">
          <div class="auctionsStatus">
            <h2>Your Volunteer Status</h2>
            <% if @winning_auctions.any? %>
              <% @winning_auctions.each do |auction| %>
                <%= link_to auction.title, auction %> - <%= auction.highest_bid.description %>
              <% end %>
            <% else %>
              Your volunteer information will appear here when you've won an auction.
            <% end %>
          </div>
        </div>
      <% end %>


    </div>
  </div>
</div>


