<h1><%= @auction.title %></h1>

<%= @auction.description %></br>
<%= convert_date(@auction.end_date) %></br>
<%= convert_date(@auction.deadline) %>

<button class="btn btn-primary btn-large bid-button">Bid</button>

<%= render 'bids/form' %>
<div class="bids">
  <% @auction.bids.each do |bid| %>
    <%= render 'bids/bid', :bid => bid %>  
  <% end %>  
</div>
