<div class="user_signup_container">
  <h1 id="user_signup">Welcome Back</h1>
  <div class="user_form">
    <%= @messages %>
    <%= form_for :session, :url => sessions_path do |f| %>
      <%= f.email_field :email, value: (@session_email? @session_email : ""), placeholder: "E-mail", :autofocus=>true %>
      <%= f.password_field :password, placeholder: "Password" %>
      <br>
      <div id="login_extras">
        <p id="forgotten_password"><%= link_to "forget your password?", new_password_reset_path %></p>
        <p id="remember_check_box"><span class="text">Remember me </span><%= f.check_box :remember_me %></p>
      </div>
      <%= f.submit "Login", :class => "user_form_button" %>
    <% end %>
    or
    <div id="fbconnect">
      <%= link_to "", fb_login_path %>
    </div>
      <script type="in/Login">
        Hello, <?js= firstName ?> <?js= lastName ?>.
      </script>
    Need an account? <%= link_to "Sign up here", new_user_path %>
  </div>
</div>


