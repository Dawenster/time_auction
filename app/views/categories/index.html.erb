<div class="category-browse">  
  <ul class="nav nav-tabs">
    <li class="active"><a href="#people" data-toggle="tab">People</a></li>
    <li><a href="#products" data-toggle="tab">Products</a></li>
    <li><a href="#experiences" data-toggle="tab">Experiences</a></li>
  </ul>

  <% i = 0  %>
  <div class="tab-content">
    <% @auctions_categories.each do |category, auctions| %>
      <% if i == 0 %>
          <div class="tab-pane browse-auctions active" id="<%= category.downcase %>">
        <% else %>
          <div class="tab-pane browse-auctions auctions" id="<%= category.downcase %>">
        <% end %>
      <ul class="auction-list">
        <% auctions.each do |auction|%>
          <li><%= cl_image_tag auction.photos.last.url, width: 108, height: 61, :class=> "browse-photo" ,:crop => :fill%> <%= link_to auction.title, auction_path(auction) %></li>
        <% end %>
      </ul>
        <% i += 1  %>
      </div>
      <% end %>
    </div>
  </div>
</div>
